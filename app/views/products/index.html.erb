<div class="container">
  <div class="well">
    <%= link_to "New Product", new_product_path, remote: true, data: {toggle: "modal", target: "#product-modal"}, class: "btn btn-primary new-product" %>
  </div>
  <div class="new-product"></div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody id="products">
      <%= render @products %>
    </tbody>
  </table>
  <div class="text-center" id="paginator">
    <%= paginate @products, remote: true , theme: "twitter-bootstrap-4"%>
  </div>
</div>
<div id="product-modal" class="modal fade"></div>